keywords = {agent-based model,artery,growth and remodeling,jagged,lateral induction,notch signaling},
number = {4},
pages = {1--21},
pmid = {32058657},
title = {{Lateral induction limits the impact of cell connectivity on Notch signaling in arterial walls}},
volume = {36},
year = {2020}
}
@article{Rehm2009a,
