doi = {10.1088/1538-3873/128/969/114201},
eprint = {1610.03031},
file = {:C$\backslash$:/Users/corba/Documents/Lab/papers//Borra, Trottier - 2016 - Discovery of peculiar periodic spectral modulations in a small fraction of solar type stars.pdf:pdf},
issn = {0004-6280},
title = {{Discovery of peculiar periodic spectral modulations in a small fraction of solar type stars}},
url = {http://arxiv.org/abs/1610.03031 http://dx.doi.org/10.1088/1538-3873/128/969/114201},
volume = {6},
