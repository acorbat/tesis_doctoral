journal = {Biophysical Journal},
number = {7},
pages = {1457--1466},
pmid = {24703307},
publisher = {Biophysical Society},
title = {{When one plus one does not equal two: Fluorescence anisotropy in aggregates and multiply labeled proteins}},
url = {http://dx.doi.org/10.1016/j.bpj.2014.02.020},
volume = {106},
year = {2014}
}
