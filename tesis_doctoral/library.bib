journal = {Journal of the Royal Society Interface},
keywords = {Bandwidth,Cellular signal transduction,Pulsatile stimulation,Pulse-interval transcoding,Representation problem},
number = {152},
title = {{Limits to the rate of information transmission through the MAPK pathway}},
volume = {16},
year = {2019}
}
@article{Suijkerbuijk2016,
